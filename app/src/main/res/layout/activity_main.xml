<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school"
    tools:context="com.example.josephbill.examms.MainActivity">


    <Button
        android:id="@+id/pributton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="KCPE"
        android:onClick="pributton"
        android:background="@drawable/btnshapes"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="72dp"
        />

    <Button
        android:id="@+id/secbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="KCSE"
        android:onClick="secbutton"
        android:background="@drawable/btnshapes"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="135dp"
        android:layout_below="@+id/pributton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/abtbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:onClick="abtbutton"
        android:background="@drawable/btnshapes"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="254dp"
        android:layout_below="@+id/secbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
